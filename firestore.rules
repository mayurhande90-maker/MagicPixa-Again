rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is the master admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'mayurhande90@gmail.com' || 
        request.auth.uid == 'qDkHqG6p3zT9p5O9K9O9Y9o9Y9o9'
      );
    }

    // Helper: Check if user is the owner of the specific profile
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- USERS & SUBCOLLECTIONS ---
    match /users/{userId} {
      
      // Core Profile Rule
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null && isOwner(userId);
      
      // UPDATE RULES:
      // In a production environment with a dedicated backend, credit updates should be server-side.
      // However, to fix the immediate purchase failure reported by the user, we must allow
      // the client to update these fields as defined in the existing frontend logic.
      allow update: if (isOwner(userId) || isAdmin()) && (
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'name', 
          'avatar', 
          'lastActive', 
          'brandKit', 
          'referralCode', 
          'referredBy', 
          'creditGrantNotification',
          'credits',
          'totalCreditsAcquired',
          'totalSpent',
          'plan',
          'storageTier',
          'basePlan',
          'lastTierPurchaseDate',
          'lifetimeGenerations',
          'lastAttendanceClaim',
          'dailyMission',
          'systemNotification',
          'lastAutomatedRefund'
        ])
      );
      
      // Admin can update everything
      allow write: if isAdmin();

      // Sub-collections: Creations are owned by the user
      match /creations/{creationId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      // Sub-collections: Brands are owned by the user
      match /brands/{brandId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      // Transactions
      match /transactions/{txId} {
        allow read: if isOwner(userId) || isAdmin();
        // Allow the user to create transaction logs (e.g. after a purchase)
        allow create: if isOwner(userId) || isAdmin();
        // Only admin can modify or delete existing transaction history
        allow update, delete: if isAdmin();
      }

      match /support_chat/{msgId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // --- GLOBAL COLLECTIONS ---

    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /global_vault/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    match /feedbacks/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }

    match /purchases/{purchaseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    match /api_errors/{logId} {
      allow create: if true;
      allow read: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read, write: if isAdmin(); 
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}