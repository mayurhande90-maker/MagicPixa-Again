rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is the master admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'mayurhande90@gmail.com' || 
        request.auth.uid == 'qDkHqG6p3zT9p5O9K9O9Y9o9Y9o9'
      );
    }

    // Helper: Check if user is the owner of the specific profile
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- USERS & SUBCOLLECTIONS ---
    match /users/{userId} {
      
      // Core Profile Rule: Owners and Admins have full access.
      allow read, write: if isOwner(userId) || isAdmin();
      
      // Referral Check: Allow any authenticated user to check if a referral code exists
      allow get: if request.auth != null;

      // Third-Party Updates: (e.g., Referrals) 
      allow update: if request.auth != null && 
                   !isOwner(userId) && 
                   !isAdmin() &&
                   request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits', 'referralCount', 'totalCreditsAcquired', 'referredBy', 'creditGrantNotification', 'lastAutomatedRefund']);

      // Explicitly allow all sub-collections for the owner/admin
      match /{allPaths=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // --- GLOBAL COLLECTIONS ---

    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /global_vault/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    match /feedbacks/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }

    match /purchases/{purchaseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    match /api_errors/{logId} {
      allow create: if true;
      allow read: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read, write: if isAdmin(); 
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}