rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is the master admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'mayurhande90@gmail.com' || 
        request.auth.uid == 'qDkHqG6p3zT9p5O9K9O9Y9o9Y9o9'
      );
    }

    // Helper: Check if user is the owner of the specific profile
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- USERS & SUBCOLLECTIONS ---
    match /users/{userId} {
      
      // Profile Document Rules
      // 1. Owners and Admins can do EVERYTHING. No restrictions.
      allow read, write: if isOwner(userId) || isAdmin();
      
      // 2. Public Read for referrals (checking if code exists)
      allow get: if request.auth != null;

      // 3. Restricted update for THIRD PARTIES (Referral system)
      // This only triggers if the requester is NOT the owner/admin.
      allow update: if request.auth != null && 
                   !isOwner(userId) && 
                   !isAdmin() &&
                   request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits', 'referralCount', 'totalCreditsAcquired', 'referredBy', 'creditGrantNotification']);

      // Recursive Subcollections (Creations, Transactions, Brands, Support Chat, etc.)
      // These are strictly private to the Owner and the Admin.
      match /{allPaths=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // --- GLOBAL COLLECTIONS ---

    // Config: Public Read, Admin Write
    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Support Tickets: Created by anyone auth, read/updated by Owner or Admin
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Feedback: Create by user, read by Admin
    match /feedbacks/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }

    // Purchases: Create by user, read by Admin or Owner
    match /purchases/{purchaseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    // Error & Audit Logs
    match /api_errors/{logId} {
      allow create: if true;
      allow read: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }

    // Default catch-all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}