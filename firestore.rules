rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth.token.email == 'mayurhande90@gmail.com';
    }

    // --- USERS ---
    match /users/{userId} {
      // Read: Public (for referrals/social)
      allow read: if request.auth != null;
      
      allow create: if request.auth.uid == userId;
      
      // Update: Own profile OR Admin OR System Logic (Referrals/Deductions)
      allow update: if request.auth.uid == userId || isAdmin() || 
                   (request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits', 'referralCount', 'totalCreditsAcquired', 'referredBy', 'lifetimeGenerations', 'lastActive']));
      
      allow delete: if isAdmin();

      // Subcollections
      match /creations/{creationId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
      match /transactions/{txId} {
        allow read: if request.auth.uid == userId || isAdmin();
        // Allow creation for credit deductions (own) or referral bonuses (others)
        allow create: if request.auth.uid == userId || isAdmin() || (request.auth != null && request.resource.data.feature.size() > 0);
      }
      match /support_chat/{msgId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
      match /brands/{brandId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    // --- CONFIG ---
    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- PURCHASES ---
    match /purchases/{purchaseId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- SUPPORT TICKETS ---
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // --- FEEDBACK ---
    match /feedbacks/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }

    // --- LOGS ---
    match /api_errors/{logId} {
      allow create: if true;
      allow read: if isAdmin();
    }
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Admin SDK only
    }
  }
}